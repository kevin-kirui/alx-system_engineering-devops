#!/usr/bin/env bash

# Check for the number of arguments passed
if [ $# -lt 4 ]; then
  echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
  exit 1
fi

# Assign arguments to variables
file_path="$1"  # Corrected variable name (lowercase and underscores)
ip="$2"
username="$3"
ssh_key_path="$4"  # Corrected variable name (lowercase and underscores)

# Disable strict host key checking (not recommended for production)
scp -o StrictHostKeyChecking=no -i "$ssh_key_path" "$file_path" "$username@$ip:~/"

# Check if transfer was successful
if [ $? -eq 0 ]; then
  echo "FILE TRANSFERRED SUCCESSFULLY"  # Fixed typo (capitalized "FILE")
else
  echo "FILE TRANSFER FAILED"
fi

exit 0
